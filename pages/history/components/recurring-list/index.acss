.recurring-list-container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  width: 100%;
}

.recurring-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 144rpx;
  border-bottom: 1rpx solid rgba(223, 229, 238, 0.3);
  background: rgba(9, 9, 9, 0.3);
}

.recurring-item:last-child {
  border-bottom: none;
}

.recurring-item .user-box {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 142rpx;
  height: 82rpx;
}

/* 有用户名称：参考支付确认页样式 */
.recurring-item .user-box .avatar-wrapper {
  position: relative;
  flex-shrink: 0;
}

.recurring-item .user-box .avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.recurring-item .user-box .avatar-text {
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
  line-height: 1;
}

.recurring-item .user-box .avatar-badge {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 32rpx;
  height: 32rpx;
  background: #B63F81;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.recurring-item .user-box .avatar-badge .badge-icon {
  width: 20rpx;
  height: 20rpx;
}

/* 没有用户名称：参考充值列表样式 */
.recurring-item .user-box .avatar-img-box {
  position: relative;
  width: 82rpx;
  height: 82rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}

.recurring-item .user-box .avatar-img-box .img {
  width: 42rpx;
  height: 42rpx;
  border-radius: 50%;
}

.recurring-item .user-box .icon {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  bottom: -6rpx;
  right: 18rpx;
}

.recurring-item .top-info {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  color: #fff;
}

.recurring-item .top-info .label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 600;
}

.recurring-item .top-info .arrow {
  width: 32rpx;
  height: 32rpx;
  margin: 0 14rpx;
}

.recurring-item .top-info .info-box {
  margin-top: 4rpx;
  display: flex;
  align-items: center;
  color: rgba(179, 179, 179, 1);
  font-size: 22rpx;
}

.recurring-item .top-info .info-box .line {
  width: 1rpx;
  height: 20rpx;
  background: rgba(223, 229, 238, 1);
  margin-right: 8rpx;
}

.recurring-item .top-info .info-box .icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

.recurring-item .price-box {
  padding-right: 30rpx;
}

.del-btn-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 100%;
  background: #D72F4D;
  color: #fff;
  font-size: 24rpx;
}

.del-btn-box .del-icon {
  width: 72rpx;
  height: 72rpx;
  margin-bottom: 8rpx;
}

.empty-state {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  flex: 1;
  min-height: 500rpx;
}

.empty-state .empty-text {
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  width: 100%;
}