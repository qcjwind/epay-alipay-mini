/**
 * ----------------------------------------
 * animation fade-in
 * ----------------------------------------
 */
@keyframes fade-in {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}

/**
 * ----------------------------------------
 * animation drawer-fade-in and class name
 * ----------------------------------------
 */
.drawer-animation {
  animation: drawer-fade-in 0.5s ease-out both;
}

@keyframes drawer-fade-in {
  from {
    transform: translateY(100%);
  }

  to {
    transform: translateY(0);
  }
}